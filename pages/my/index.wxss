.my {
    height: 100vh;
    width: 100vw;
    background: #f7f6fb;
}

.detail {
    padding-top: 100rpx;
    background: linear-gradient(to bottom, #ffeadb, #f7f6fb);
    padding-bottom: 40rpx;
}

.person {
    display: flex;
    margin-top: 50rpx;
    padding: 20rpx;
    position: relative;
}

.user_btn {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: 0;
}

.person_img {
    height: 150rpx;
    width: 150rpx;
    border-radius: 100%;
}

.person_name {
    width: 200rpx;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    margin-left: 20rpx;
    color: #8a8a8a;
}

.person_detail {
    flex: 1;
}

.setting {
    background: #fff;
    padding: 20rpx;
    width: calc(100vw - 80rpx);
    margin-left: 20rpx;
    margin-top: 50rpx;
    border-radius: 20rpx;
}

.service_btn {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
}