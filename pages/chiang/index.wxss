.wrap {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: relative;
}

.top {
    background: linear-gradient(to bottom , #fef1e8, #f7f6fb); 
}

.content {
    flex: 1;
    overflow: hidden;
    background: #f7f6fb;
}

.content ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
