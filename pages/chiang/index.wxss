.content {
    flex: 1;
    overflow: hidden;
    background: #f7f6fb;
}

.content ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.swiper {
    width: calc(100vw - 40rpx);
    padding-left: 20rpx;
    height: calc((100vw - 40rpx) / 3);
    border-radius: 20rpx;
}

.swiper_item {
    height: 100%;
    width: 100%;
}

.swiper_img {
    height: 100%;
    width: 100%;
}

.class {
    padding-top: 20rpx;
}

.chunk {
    margin-bottom: 20rpx;
}

.content_empty {
    height: 500rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #8a8a8a;
    font-size: 40rpx;
}